  <body>
    <div class="container">
      <div class="form-container">
        <div class="signin">
          <form action="/signup" method="post" class="form-sign-in" id="form101">
            <h1>Sign Up üîè</h1>
            <input type="text" placeholder="Enter Your Username" name="username" required />   
